<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    PO Approval User wizard and action-->
    <record id="po_approval_user_wizard_form" model="ir.ui.view">
        <field name="name">po.approval.user.wizard.form</field>
        <field name="model">po.approval.user.wizard</field>
        <field name="arch" type="xml">
            <form string="Send to Approval">
                <sheet>
                    <h2>Send to Approval</h2>
                    <group>
                        <group>
                            <field name="user_id" widget='selection'/>
                            <field name="model_id" invisible="1"/>
                            <field name="record_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string='Send for Approval' name="approval_submission" type="object" class="btn-primary"/>
                    <button string="Abort" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="po_approval_user_wizard_action" model="ir.actions.act_window">
        <field name="name">Send to Approval</field>
        <field name="res_model">po.approval.user.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="po_approval_user_wizard_form"/>
        <field name="target">new</field>
    </record>


</odoo>