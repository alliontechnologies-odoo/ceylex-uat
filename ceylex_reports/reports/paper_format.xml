<odoo>
    <data>
        <!--  New Paper format for A4    -->
        <record id="ceylex_a4_format" model="report.paperformat">
            <field name="name">Ceylex A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">20</field>
            <field name="dpi">100</field>
        </record>
        <!--  New Paper format for A4    -->
        <record id="ceylex_a4_format_invoice" model="report.paperformat">
            <field name="name">Ceylex A4 Invoice</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">30</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">20</field>
            <field name="dpi">100</field>
        </record>

        <!--  New Paper format for A4    -->
        <record id="ceylex_a4_format_no_margin" model="report.paperformat">
            <field name="name">Ceylex A4</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">10</field>
            <field name="dpi">100</field>
        </record>
    </data>
</odoo>